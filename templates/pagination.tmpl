<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>{{ .title }}</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;800&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary: #6366f1;
            --secondary: #a855f7;
            --bg-dark: #0f172a;
            --surface: rgba(30, 41, 59, 0.8);
            --border: rgba(255, 255, 255, 0.1);
            --text-heading: #f8fafc;
            --text-desc: #94a3b8;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            -webkit-font-smoothing: antialiased;
        }

        /* Use dvh (Dynamic Viewport Height) for mobile browser bars */
        html, body {
            width: 100%;
            height: 100vh;
            height: 100dvh;
            font-family: 'Inter', sans-serif;
            background: radial-gradient(circle at top left, #1e1b4b, #0f172a);
            color: var(--text-heading);
            overflow: hidden;
        }

        .main-app {
            display: flex;
            flex-direction: column;
            width: 100%;
            height: 100%;
            padding: 24px;
        }

        header h1 {
            font-size: 1.8rem;
            margin-bottom: 16px;
            background: linear-gradient(to right, #818cf8, #c084fc);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            font-weight: 800;
        }

        /* TABLE AREA - Critical fix for mobile scroll */
        .table-area {
            flex: 1;
            min-height: 0; /* Allows container to shrink on mobile */
            overflow: auto;
            background: var(--surface);
            backdrop-filter: blur(12px);
            border: 1px solid var(--border);
            border-radius: 16px;
            -webkit-overflow-scrolling: touch; /* Smooth mobile momentum scroll */
        }

        table {
            width: 100%;
            border-collapse: collapse;
            min-width: 500px; /* Prevents extreme squishing */
        }

        th {
            position: sticky;
            top: 0;
            background: #1e293b;
            padding: 14px 16px;
            text-align: left;
            font-size: 0.7rem;
            text-transform: uppercase;
            letter-spacing: 0.1em;
            z-index: 10;
        }

        td {
            padding: 16px;
            border-bottom: 1px solid var(--border);
            vertical-align: top;
        }

        .project-link {
            color: #818cf8;
            text-decoration: none;
            font-weight: 700;
            display: block;
            margin-bottom: 4px;
        }

        .description-text {
            color: var(--text-desc);
            font-size: 0.9rem;
            line-height: 1.5;
        }

        /* PAGINATION SECTION */
        footer {
            padding: 16px 0 8px 0;
            display: flex;
            justify-content: center;
            flex-shrink: 0;
        }

        .pager-container {
            display: flex;
            align-items: center;
            background: var(--surface);
            padding: 6px;
            border-radius: 12px;
            border: 1px solid var(--border);
            gap: 6px;
            max-width: 100%; /* Ensure it doesn't overflow screen */
        }

        .page-strip {
            display: flex;
            gap: 4px;
            overflow-x: auto;
            max-width: 40vw;
            scrollbar-width: none;
            scroll-behavior: smooth;
        }

        .page-strip::-webkit-scrollbar { display: none; }

        .page-btn {
            min-width: 38px;
            height: 38px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: rgba(255, 255, 255, 0.05);
            color: #94a3b8;
            border-radius: 8px;
            text-decoration: none;
            font-size: 0.85rem;
            flex-shrink: 0;
        }

        .page-btn.active {
            background: linear-gradient(135deg, var(--primary), var(--secondary)) !important;
            color: white !important;
        }

        .nav-arrow {
            background: #334155;
            color: white;
            border: none;
            padding: 8px 12px;
            border-radius: 8px;
            cursor: pointer;
            font-size: 0.8rem;
            white-space: nowrap;
        }

        /* MOBILE ADJUSTMENTS */
        @media (max-width: 600px) {
            .main-app { padding: 12px; }
            header h1 { font-size: 1.4rem; }
            .page-strip { max-width: 30vw; }
            .nav-arrow { padding: 8px 10px; }
            th, td { padding: 12px; }
        }
    </style>
</head>
<body>

    <div class="main-app">
        <header>
            <h1>{{ .title }}</h1>
        </header>

        <div class="table-area">
            <table>
                <thead>
                    <tr>
                        <th style="width: 35%;">Project</th>
                        <th style="width: 65%;">Description</th>
                    </tr>
                </thead>
                <tbody>
                    {{ range .data }}
                        {{ range .GithubData }}
                        <tr>
                            <td>
                                <a href="{{ .Key }}" target="_blank" class="project-link">
                                    <script>document.write("{{ .Key }}".split('/').pop());</script>
                                </a>
                            </td>
                            <td>
                                <div class="description-text">{{ .Value }}</div>
                            </td>
                        </tr>
                        {{ end }}
                    {{ end }}
                </tbody>
            </table>
        </div>

        <footer>
            <div class="pager-container">
                <button class="nav-arrow" onclick="jumpTo(0)">First</button>
                <button class="nav-arrow" onclick="scrollStrip(-150)">‹</button>

                <div class="page-strip" id="pager">
                    {{ range .data }}
                    <a href="?pn={{ .PageNumber }}"
                       data-pn="{{ .PageNumber }}"
                       class="page-btn {{ if eq $.PageNumber .PageNumber }}active{{ end }}">
                        {{ .PageNumber }}
                    </a>
                    {{ end }}
                </div>

                <button class="nav-arrow" onclick="scrollStrip(150)">›</button>
                <button class="nav-arrow" onclick="jumpTo(1)">Last</button>
            </div>
        </footer>
    </div>

    <script>
        const pager = document.getElementById('pager');

        function scrollStrip(val) {
            pager.style.scrollBehavior = 'smooth';
            pager.scrollLeft += val;
        }

        function jumpTo(pos) {
            pager.style.scrollBehavior = 'auto';
            if (pos === 0) pager.scrollLeft = 0;
            else pager.scrollLeft = pager.scrollWidth;
        }

        document.addEventListener("DOMContentLoaded", function() {
            const urlParams = new URLSearchParams(window.location.search);
            const currentPage = urlParams.get('pn');

            if (currentPage) {
                document.querySelectorAll('.page-btn').forEach(link => {
                    link.classList.toggle('active', link.getAttribute('data-pn') === currentPage);
                });
            }

            const activePage = document.querySelector('.page-btn.active');
            if (activePage) {
                pager.style.scrollBehavior = 'auto';
                activePage.scrollIntoView({ inline: 'center' });
            }
        });
    </script>
</body>
</html>